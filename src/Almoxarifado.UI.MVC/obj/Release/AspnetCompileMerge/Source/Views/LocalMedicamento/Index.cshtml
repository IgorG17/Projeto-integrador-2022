    <link rel="stylesheet" href="css/style.css">
</head>


<body class=" ">
    <div class=" ">
        <div class=" ">
            <div class="form-left">

                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Estoques</h1>
                    <p class="mb-4">
                       </a>
                    </p>

                    <p>
                        @Html.ActionLink("Cadastrar", "Create")
                    </p>

                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Dados da Tabela</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <!-- é possivel fazer com q ele pegue o nome direto no codigo dinamicamente usando: @Html.DisplayNameFor(model => model.nomeLocalMedicamento) -->
                                            <th>Localidade</th>
                                            <th>Status</th>
                                            <th>Alterações</th>

                                        </tr>
                                    </thead>


                                    <tbody>
                                        @foreach (var item in Model){
                                        <tr>
                                            <td style="padding-right: 60px"> @Html.DisplayFor(modelItem => item.nomeLocalMedicamento)</td>
                                            <td style="padding-right: 60px"> @Html.DisplayFor(modelItem => item.flAtivo) </td>
                                          
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id=item.idLocalMedicamento })
                                            </td>
                                        </tr>

                                            }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>



            </div>
        </div>
    </div>


