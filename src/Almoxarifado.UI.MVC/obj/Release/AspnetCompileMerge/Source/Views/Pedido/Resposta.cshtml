@model Almoxarifado.Application.ViewModels.PedidoViewModel

@{
    ViewBag.Title = "Resposta";
}

<center><h2>Resposta de pedido</h2></center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idPedido)
    @Html.HiddenFor(model => model.dataMudancaStatus)

    @Html.ValidationMessageFor(model => model.statusPedido, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-10"><h5>O pedido será atendido?<h5></label>
        <div class="col-md-3">
            <div class="checkbox">
                <label class="form-control">
                    <input type="radio" id="Rejeitado" name="statusPedido" value="Aceito">
                    Sim
                </label>

                <label class="form-control">
                    <input type="radio" id="Rejeitado" name="statusPedido" value="Rejeitado">
                    Não
                </label>

            </div>
        </div>
    </div>
    <hr />


    <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
            <input type="submit" class="btn btn-primary btn-user btn-block" value="Cadastrar" />
        </div>
    </div>
</div>
    <div class="col-md-offset-2 col-md-2">
        <div class="btn btn-primary btn-user btn-blocks">
            @Html.ActionLink("Voltar", "Index", new { @class = "col-md-offset-2 col-md-2" })
        </div>
    </div>
}
