@model Almoxarifado.Application.ViewModels.UsuarioViewModel

@{
    ViewBag.Title = "Edit";
}

<center><h2>Alteração de cadastro de usuario</h2></center>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idUsuario)





        <label class="control-label col-md-10"><h5>Nome do usuario </h5></label>
        <div class="form-group">
            <div class="col-md-3">
                @Html.EditorFor(model => model.nomeUsuario, new { htmlAttributes = new { @class = "form-control", placeholder = "Alterar o nome do usuario" } })
                @Html.ValidationMessageFor(model => model.nomeUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <label class="control-label col-md-10"><h5>Login do usuario </h5></label>
        <div class="form-group">
            <div class="col-md-3">
                @Html.EditorFor(model => model.loginUsuario, new { htmlAttributes = new { @class = "form-control", placeholder = "Alterar o login do usuario" } })
                @Html.ValidationMessageFor(model => model.loginUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <label class="control-label col-md-10"><h5>Senha do usuario </h5></label>
        <div class="form-group">
            <div class="col-md-3">
                @Html.EditorFor(model => model.senhaUsuario, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o senha do usuario" } })
                @Html.ValidationMessageFor(model => model.senhaUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <label class="control-label col-md-10"><h5>Status de usuario</h5></label>
        <div class="col-md-3">
            <div class="checkbox">
                <label class="form-control">
                    @Html.EditorFor(model => model.flAtivo)
                    Ativo
                </label>
            </div>
        </div>
    </div>
    <br />

    <label class="control-label col-md-10"><h5>Função </h5></label>
    <div class="form-group">
        <div class="box">
            @Html.DropDownList("idRole", new SelectList(ViewBag.Roles, "idRole", "nomeRole"))
            @Html.ValidationMessageFor(model => model.role.nomeRole, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
            <input type="submit" class="btn btn-primary btn-user btn-block" value="Cadastrar" />
        </div>
    </div>

    <div class="col-md-offset-2 col-md-2">
        <div class="btn btn-primary btn-user btn-blocks">
            @Html.ActionLink("Voltar", "Listar", new { @class = "col-md-offset-2 col-md-2" })
        </div>
    </div>





}
