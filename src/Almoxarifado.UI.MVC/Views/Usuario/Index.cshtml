@model Almoxarifado.Application.ViewModels.UsuarioViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

@Styles.Render("~/Content/css/style.css")

<!DOCTYPE html>
<html lang="pt-br">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                                <img class="col-lg-6 d-none d-lg-block" src="~/Content/img/annie-spratt-mS-rLvPyAl4-unsplash.jpg"/>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Bem Vindo!</h1>
                                    </div>

                                    <form asp-action="Index" asp-controller="Usuario" method="post" id="myform">

                                        <div class="form-group">
                                            @Html.LabelFor(m => m.loginUsuario, new { @class = "wrap-input100 validate-input" })
                                            <input type="text" name="loginUsuario" id="loginUsuario" class="form-control form-control-user" placeholder="Digite o seu login" required="">
                                            @Html.ValidationMessageFor(m => m.loginUsuario, "", new { @class = "focus-input100" })
                                        </div>


                                        <div class="form-group">
                                            @Html.LabelFor(m => m.senhaUsuario, new { @class = "wrap-input100 validate-input" })
                                            <input type="password" name="senhaUsuario" id="senhaUsuario" class="form-control form-control-user" placeholder="Digite sua senha" required="">
                                            @Html.ValidationMessageFor(m => m.senhaUsuario, "", new { @class = "focus-input100" })


                                        </div>


                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">
                                                    Manter Conectado
                                                </label>
                                            </div>
                                            <br>

                                        </div>

                                        <div class="form-group">
                                            <div class="container-login100-form-btn">
                                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Login" />
                                            </div>
                                        </div>



                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

</body>

</html>


