@model Almoxarifado.Application.ViewModels.CategoriaMedicamentoViewModel

@{
    ViewBag.Title = "Edit";
}

<center><h2>lteração da categoria do Medicamento</h2></center>
<hr />



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idCategoriaMedicamento)

        <div class="form-group">
            <label class="control-label col-md-10"><h5>Categoria do Medicamento</h5></label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.nomeCategoriaMedicamento, new { htmlAttributes = new { @class = "form-control", placeholder = "Alterar da categoria do Medicamento" } })
                @Html.ValidationMessageFor(model => model.nomeCategoriaMedicamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <label class="control-label col-md-10"><h5>Status da categoria do medicamento</h5></label>
        <div class="col-md-3">
            <div class="checkbox">
                <label class="form-control">
                    @Html.EditorFor(model => model.flativo)
                    Ativo
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" class="btn btn-primary btn-user btn-block" value="Cadastrar" />
            </div>
        </div>

        <div class="col-md-offset-2 col-md-2">
            <div class="btn btn-primary btn-user btn-blocks">
                @Html.ActionLink("Voltar", "Index", new { @class = "col-md-offset-2 col-md-2" })
            </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}