@model Almoxarifado.Application.ViewModels.MedicamentoViewModel
@{
    ViewBag.Title = "Login";
}

<center><h2>Cadastro de Medicamento</h2></center>
<hr />
<head>
    <meta charset="utf-8">
    

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    @Styles.Render("~/Content/css/style.css")


    <link rel="stylesheet" type="text/css" href="css/montserrat-font.css">
    <link rel="stylesheet" type="text/css" href="Almoxarifado.UI.MVC\Content\fonts\material-design-iconic-font\css\material-design-iconic-font.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body class=" ">
    @using (Html.BeginForm())
    {
    <div class="col-md-12">
 
        @Html.AntiForgeryToken()
        <label class="control-label col-md-10"><h5>Nome do medicamento </h5></label>
        <div class="form-group">
            <div class="col-md-3">
                @Html.EditorFor(model => model.nomeMedicamento, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o nome do medicamento" } })
                @Html.ValidationMessageFor(model => model.nomeMedicamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-10"><h5>Nome quimico</h5></label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.nomeQuimicoMedicamento, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o nome quimico" } })
                @Html.ValidationMessageFor(model => model.nomeQuimicoMedicamento, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-10"><h5>Formula farmacêutica </h5></label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.formaFarmaceuticaMedicamento, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite a formula farmacêutica" } })
                @Html.ValidationMessageFor(model => model.formaFarmaceuticaMedicamento, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-10"><h5>GTIN-13</h5></label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.bulaMedicamento, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o GTIN-13" } })
                @Html.ValidationMessageFor(model => model.bulaMedicamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-10"><h5>Categoria e tipo do medicamento</h5></label>
            <div class="box">

                @Html.DropDownList("idCategoriaMedicamento", new SelectList(ViewBag.CategoriaMedicamentoAtivo, "idCategoriaMedicamento", "nomeCategoriaMedicamento"))
                @Html.DropDownList("idTipoMedicamento", new SelectList(ViewBag.TipoMedicamentoAtivo, "idTipoMedicamento", "nomeTipoMedicamento"))
            </div>

        </div>


        <h2>Informações do medicamento</h2>


        <div class="form-group">
            <label class="control-label col-md-10"><h5>Numero do registro Min. Saúde</h5></label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.nrMinisterioSaudeMedicamento, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o numero do registro Min. Saúde" } })
                @Html.ValidationMessageFor(model => model.nrMinisterioSaudeMedicamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-10"><h5>Código DBC</h5></label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.codigoDbcMedicamento, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o código DBC" } })
                @Html.ValidationMessageFor(model => model.codigoDbcMedicamento, "", new { @class = "text-danger" })
            </div>
        </div>


            <label class="control-label col-md-10"><h5>Status de trabalho</h5></label>
            <div class="col-md-3">
                <div class="checkbox">
                    <label class="form-control">
                        @Html.EditorFor(model => model.flativo)
                        Ativo
                    </label>                  
                </div>
                <hr />

                <div class="form-group">
                    <div class="col-md-offset-9 col-md-9">
                        <input type="submit" class="btn btn-primary btn-user btn-block" value="Cadastrar" />
                        <div class="btn btn-primary btn-user btn-blocks">
                            @Html.ActionLink("Voltar", "Index", new { @class = "col-md-offset-2 col-md-2" })
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
