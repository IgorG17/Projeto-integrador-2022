@model Almoxarifado.Application.ViewModels.TipoMedicamentoViewModel

@{
    ViewBag.Title = "Edit";
}

<center><h2>Alteração de Medicamento</h2></center>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idTipoMedicamento)

    <div class="form-group">
        <label class="control-label col-md-10"><h5>Alteração do nome do Medicamento </h5></label>
        <div class="col-md-3">
            @Html.EditorFor(model => model.nomeTipoMedicamento, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nomeTipoMedicamento, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-10"><h5>Status do trabalho</h5></label>
        <div class="col-md-3">
            <div class="checkbox">
                <label class="form-control">
                    @Html.EditorFor(model => model.flAtivo)
                    Ativo
                </label>
            </div>
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
            <input type="submit" class="btn btn-primary btn-user btn-block" value="Alterar" />
        </div>
    </div>
</div>

}

<div class="col-md-offset-2 col-md-2">
    <div class="btn btn-primary btn-user btn-blocks">
        @Html.ActionLink("Voltar", "Index", new { @class = "col-md-offset-2 col-md-2" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
